<div id="page-wrapper">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Change my account settings</h3>
          </div>
          <div class="panel-body">
            <%= form_for @user, :as => :user, :html => {:role => 'form'}, :url => account_settings_path, :method => :put do |f| %>
                <div class="form-group">
                  <%= f.label :password, 'This is my current password:' %>
                  <%= f.password_field :password, :placeholder => "Enter your current password", :class => 'form-control' %>
                  <%= show_field_error(@user, :password) %>
                </div>
                <div class="form-group">
                  <%= f.label :username, 'I want a new username:' %>
                  <%= f.text_field :username, :placeholder => "Enter a new username if you want to", :class => 'form-control' %>
                  <%= show_field_error(@user, :username) %>
                </div>
                <div class="form-group">
                  <%= f.label :email, 'My emailaddress has been changed to:' %>
                  <%= f.text_field :email, :placeholder => "Enter a new emailaddress if you want to", :class => 'form-control' %>
                  <%= show_field_error(@user, :email) %>
                </div>
                <div class="form-group">
                  <%= f.label :new_password, 'I want a new password:' %>
                  <%= f.password_field :new_password, :placeholder => "Enter a new password if you want to", :class => 'form-control' %>
                  <%= show_field_error(@user, :new_password) %>
                </div>
                <div class="form-group">
                  <%= f.label :new_password_confirmation, 'Yes, to be sure, I want this new password' %>
                  <%= f.password_field :new_password_confirmation, :placeholder => "Enter a new password if you want to", :class => 'form-control' %>
                  <%= show_field_error(@user, :new_password_confirmation) %>
                </div>
                <div class="form-group">
                  <%= f.submit 'Update', :class => 'btn btn-block btn-success' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>