<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Log in to GroceryBuddy</h3>
            </div>
            <div class="panel-body">
                <%= form_for @user, :as => :user, :html => {:role => 'form'}, :url => sign_in_path do |f| %>
                        <div class="form-group">
                            <%= f.label 'username or email:' %>
                            <%= f.text_field :username, :placeholder => "Enter your username or email", :class => 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.label 'password:' %>
                            <%= f.password_field :password, :placeholder => "Enter your password", :class => 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.check_box :remember_me %>
                            <%= f.label 'remember me' %>
                        </div>
                        <div class="form-group">
                            <%= f.submit 'Sign In', :class => 'btn btn-block btn-success' %>
                            <%= f.submit 'Clear Form', :class => 'btn btn-block btn-warning', :type => 'reset' %>
                        </div>
                <% end %>
                <%= link_to 'Forgot your password?', :forgot_password %>
            </div>
        </div>
    </div>
</div>